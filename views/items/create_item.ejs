<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>     
<body>
    <%- include('../partials/header.ejs') %> 

    <!--content section -->
    <section class="container style-section">
        <div>
            <img class="img-fluid d-none d-lg-block d-xl-block d-xxl-block style-section-image" style="mix-blend-mode: darken" src="/assets/images/add-item.svg" alt="productive.svg">
        </div>
        <div class="container">
            <div class="container style-citem-form-container">
                <form action="/items" method="POST" enctype="multipart/form-data">
                    <div>
                        <h1 class="style-citem-title">Create Item</h2>
                    </div>
                    <div class="form-inputs">
                        <div>
                            <label for="item-name">Name:</label>
                            <input type="text" name="name" id="item-name" class="form-control" required>
                        </div>
                        <div>
                            <label for="item-quantity">Quantity:</label>
                            <input type="number" name="quantity" id="item-quantity" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-inputs">
                        <div>
                            <label for="item-categories">Category:</label>
                            <select id="item-categories"  name="category" class="form-select" name="item-category" id="item-category" required></select>
                        </div>
                        <div>
                            <label for="item-price">Price:</label>
                            <input type="number" name="price" id="item-price" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-inputs">
                        <div>
                            <label for="item-description">Description:</label>
                            <textarea class="form-control" name="description" id="item-description" cols="55" rows="5" required></textarea>
                        </div>
                    </div> 
                    <div class="form-inputs">
                        <div>
                            <label for="item-image">Image:</label>
                            <input type="file" class="form-control" name="item-image" id="item-image" accept="image/png, image/jpeg" required>
                        </div>
                        <div>
                            <label for="">&nbsp;</label>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </div>  
                </form>
            </div>
        </div>
    </section>

    <%- include('../partials/footer.ejs') %> 

    <script src="/js/loadCategories_ajax.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
</body>
</html>