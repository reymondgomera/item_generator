<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %> 
<body>
    <%- include('../partials/header.ejs') %> 

    <!--content section -->
    <section class="container style-section">
        <div class="container">
            <div class="style-scontainer mx-xs-3">
                <div class="details-header">
                    <h1 class="h1 style-section-title"><%= item.item_name %> </h1>
                    <a href="" class="btn btn-danger">Delete</a>
                </div>
                <div>
                    <div class="item-data-container">
                        <span>Created: &nbsp; <span class="fw-bold"><%= item.item_createdat %> </span> &nbsp; Updated: &nbsp; <span class="fw-bold"><%= item.item_updatedat %> </span></span>
                    </div>
                    <div class="item-data-container">
                        <span>Quantity: </span>
                        <span class="fw-bold"><%= item.item_quantity %> </span>
                        <div id="quantity-edit-input" class="input-group mb-3 data-edit-field d-none">
                            <input type="number" class="form-control" >
                        </div>
                        <img id="btn-quantity-edit" class="btn-edit style-icons edit-icons" data-name="quantity" data-item="<%= item.item_id %>" src="/assets/icons/icons8-edit.svg" alt="Edit Icon">
                    </div>
                    <div class="item-data-container">
                        <span>Price: </span>
                        <span class="fw-bold details-price"><%= item.item_price %> </span>
                        <div class="input-group mb-3 data-edit-field d-none">
                            <input type="text" class="form-control" >
                        </div>
                        <img id="btn-price-edit" class="btn-edit style-icons edit-icons" data-name="price" data-item="<%= item.item_id %>" src="/assets/icons/icons8-edit.svg" alt="Edit Icon">
                    </div>
                    <div class="item-data-container">
                        <span>Category: </span>
                        <span class="fw-bold"><%= item.category_name %> </span>
                        <div class="input-group mb-3 data-edit-field d-none">
                            <input type="number" class="form-control" >
                        </div>
                    </div>
                </div>
                <div>
                    <div class="item-data-container">
                        <span>Description: </span>
                       <img id="btn-description-edit" class="btn-edit style-icons edit-icons" data-name="description" data-item="<%= item.item_id %>" src="/assets/icons/icons8-edit.svg" alt="Edit Icon">
                    </div>
                    <p class="text-muted lh-lg"><%= item.item_desc %> </p>
                    <textarea class="form-control d-none" id="item-desctiption" cols="30" rows="10"></textarea>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer.ejs') %> 

    <script src="/js/detailsEdit_ajax.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
</body>
</html>