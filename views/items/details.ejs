<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %> 
<body>
    <%- include('../partials/header.ejs') %> 

    <!--content section -->
    <section class="container style-section">
        <div class="container">
            <div class="style-scontainer mx-xs-3">
                <div class="details-header">
                    <h1 class="h1 style-section-title"><%= item.item_name %> </h1>
                    
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                        Delete
                    </button>
                    
                    <!-- Modal -->
                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Confirmation Message</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <span>Are you sure you're going to delete this item?</span> 
                          </div>
                          <div class="modal-footer">
                            <button id="btn-delete" class="btn btn-danger" data-item="<%= item.item_id %>">Confim</button>
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                </div>
                <div>
                    <div class="item-data-container">
                        <span>Created: &nbsp; <span class="fw-bold"><%= item.item_createdat %> </span> &nbsp; Updated: &nbsp; <span class="fw-bold"><%= item.item_updatedat %> </span></span>
                    </div>
                    <div class="item-data-container">
                        <span>Quantity: </span>
                        <span class="fw-bold"><%= item.item_quantity %> </span>
                        <div id="quantity-edit-input" class="input-group mb-3 data-edit-field d-none">
                            <input type="number" class="form-control">
                        </div>
                        <img id="btn-quantity-edit" class="btn-edit style-icons edit-icons" data-name="quantity" data-item="<%= item.item_id %>" src="/assets/icons/icons8-edit.svg" alt="Edit Icon">
                    </div>
                    <div class="item-data-container">
                        <span>Price: </span>
                        <span class="fw-bold details-price"><%= item.item_price %> </span>
                        <div class="input-group mb-3 data-edit-field d-none">
                            <input type="text" class="form-control" pattern="[0-9]+">
                        </div>
                        <img id="btn-price-edit" class="btn-edit style-icons edit-icons" data-name="price" data-item="<%= item.item_id %>" src="/assets/icons/icons8-edit.svg" alt="Edit Icon">
                    </div>
                    <div class="item-data-container">
                        <span>Category: </span>
                        <span class="fw-bold"><%= item.category_name %> </span>
                        <div class="input-group mb-3 data-edit-field d-none">
                            <input type="number" class="form-control" >
                        </div>
                    </div>
                </div>
                <div>
                    <div class="item-data-container">
                        <span>Description: </span>
                       <img id="btn-description-edit" class="btn-edit style-icons edit-icons" data-name="description" data-item="<%= item.item_id %>" src="/assets/icons/icons8-edit.svg" alt="Edit Icon">
                    </div>
                    <p class="text-muted lh-lg"><%= item.item_desc %> </p>
                    <textarea class="form-control d-none" id="item-desctiption" cols="30" rows="10"></textarea>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer.ejs') %> 

    <script src="/js/detailsEdit_ajax.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
</body>
</html>